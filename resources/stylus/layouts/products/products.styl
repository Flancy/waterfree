.products
	padding-top 50px
	.h2
		margin-bottom 30px
		font-weight 600
	.product
		margin-bottom 30px
		background-color #ffffff
		box-shadow 0 4px 8px rgba(0,0,0,0.15)
		border-radius 8px
		overflow hidden
		transition all 0.3s ease-in-out
		.product-head
			padding 15px
			position relative
			height 280px
			text-align center
			.product__liter
				position absolute
				top 0
				left 0
				max-width 100px
				padding 10px 0 0 5px
			.product__image
				max-height 100%
				display inline-block
		.product-body
			padding 0 15px 15px 15px
			text-align center
			.product__title
				font-size 22px
				font-weight 700
				margin-bottom 15px
			.product__price
				margin-bottom 5px
				padding 8px 20px
				display inline-block
				background-color #35a4dc
				font-weight 500
				line-height 1
				font-size 18px
				color #ffffff
				border-radius 20px
		.product-foot
			padding-bottom 15px
			font-size 0
			text-align center
			.product-btn
				width 50%
				vertical-align middle
				display inline-block
			.product-count
				width 50%
				vertical-align middle
				display inline-block
				.product-minus,
				.product-plus
					font-weight 500
					display inline-block
					vertical-align middle
					font-size 20px
					cursor pointer
					outline none !important
					-ms-user-select none
					-moz-user-select none
					-khtml-user-select none
					-webkit-user-select none
				.product-input
					font-size 16px
					font-weight 500
					display inline-block
					vertical-align middle
					width auto
					min-width 20px
					max-width 50px
					border none
					box-shadow none
					text-align center
		&:hover, &:active
			box-shadow 0 8px 22px rgba(0,0,0,0.15)
	