.footer
	margin-top 60px
	padding-top 40px
	padding-bottom 30px
	background-color #35a4dc
	color #ffffff
	.h3
		font-weight 600
		margin-bottom 25px
	.text-description
		font-size 13px
		line-height 1.2
	.footer-contact
		font-size 13px
		a
			font-size 15px
			font-weight 600
			color #ffffff
			text-decoration underline
			&:hover, &:active
				text-decoration none
		span
			padding-right 5px
	.footer-link
		font-size 15px 
		display block
		color #ffffff
		text-decoration underline
		&:hover, &:active
			text-decoration none